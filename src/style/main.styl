*
	padding 0
	margin 0
	outline none
	text-decoration none


cyan = #40f3f7

.fl-left
	float left
.fl-right
	float right
	
img
	width 100%
a.btn
button.btn
	&.yellowGrd
		border: 2px solid #ffcc00;
		background: rgba(255,226,5,1);
		background: linear-gradient(to bottom, rgba(255,226,5,1) 63%, rgba(255,118,5,1) 100%)
		color: #000000
		font-size: 14px
		font-family: helvetica, serif
		text-decoration: underline
		transition all .5s ease
		&:hover
			background-color: rgba(255,225,0,0.57)
			box-shadow: 0 0 18px 5px rgba(0,229,255,0.65)
			background: linear-gradient(to bottom, #ffed67 63%, #ffb405 100%)
	&.showMore
		border: 2px solid #fff
		color: #fff
		border-radius: 15px
		background: #40f3f782
		padding: 10px 25px
		transition all .5s
		&:hover
			background transparent

body
	background: url(/img/head_bg.jpg) fixed center 0px
	background-size: 120% 120%
	transition: all 2s ease-out
	background-repeat: no-repeat
	font-family: 'Fira Sans', sans-serif
	
.navbar
	box-shadow: none;
	border: 0;
	border-radius: 0;
	background: #00000082;
	margin: 25px 0 0;
	position: absolute;
	z-index: 2;
	width: 100%;
header
	padding: 120px 0 0
	h1
		text-align center
		color #FFF
	h2
		color cyan
		text-align: center
		margin-bottom: 40px
	.headDescription
		position relative
		&_item
			margin 0
			padding 0
			h3
				display: inline-block
				padding: 10px 25px
				background: #40f3f7
				border-radius: 10px
				color #0d202f
				margin 30px 0
			&:first-child
				color #fff
				text-align left
				&Wrapper
					float right
			&:nth-child(2)
				background #40f3f7c4
				text-align right
				h3
					color #fff
					background #0d202f
			ul
				list-style none
				margin-bottom 30px
				font-weight: 400
				font-size: 15px
			&Wrapper
				width 330px
				position relative
				margin-bottom 60px
				.vsBox
					position: absolute
					background: #fff
					width: 180px
					height: 180px
					display: flex
					align-items: center
					border-radius: 50%
					padding: 50px
					top: 50%
					left: 0%
					transform: translate(-50%, -50%)
					box-shadow: 3px 8px 20px #0000008a
.separator
	display: flex
	justify-content: center
	align-items: center
	margin: 25px 0 40px
	span
		width: 10px
		height: 10px
		background: #40f3f7
		border-radius: 50%
		margin: 0 15px
	&:before
	&:after
		content ''
		display block
		height 1px
		width 49%
		max-width 300px 
		background #ffffff94 
section
	h3
		text-align center
		color #fff
.ourAdvertisers
	background: #fff url(/img/moon.png) no-repeat
	background-position: 50% 351px;
	background-size: 85%
	padding: 40px 0 180px
	position relative
	overflow hidden
	transition: all 2s ease
	h3
		color #6d6d6d
	&_shabow
		position: absolute
		height: 100%
		bottom: 0
		width: 146%
		left: -50%
		transform: translate(25%, 0%)
		box-shadow: inset 0 -32px 60px 0px #000000a3
	.separator
		&:before
		&:after
			content ''
			background #00000094 
.casesNews
	color #fff
	padding 40px 0
	h4
		color cyan
	.item_img
		margin-bottom 30px
	.title
		font-weight bold
		margin-bottom 20px
	.showMore
		float right
.subscrabeBox
	background cyan
	padding 30px 0
	margin 10px 0 20px
	p
		font-size: 18px
		max-width: 400px
		font-weight: 500
		text-align: right
		float: right
	form
		display flex
		input
			height: 50px
			width: 100%
			border: 1px solid #a7a7a7
			border-radius: 12px
			padding: 0 110px 0 45px
			margin-right: 10px
			display: block
			background: #fff
.inputWrapper
	position relative
	&_icon
		position: absolute;
		top: 53%;
		font-size: 22px;
		left: 10px;
		transform: translate(0, -50%);
		color: #a7a7a7
	button.btn
		position: absolute;
		right: 20px;
		top: 50%;
		transform: translate(0, -50%);
		color #fff
		&:hover
			box-shadow none!important
footer
	padding 20px 0
	color #fff
			
				
		